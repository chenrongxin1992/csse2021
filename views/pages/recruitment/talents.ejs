	$(document).ready(function () {
		//$('.changeL').css('display','none')
	    $('.<%=check_nav%>').addClass('active')
		$('.changeL').click(function(){
            console.log('change to en')
            $.get('/csse/setLanguage', {
                language:'0'
            }, function(data){
                if(data.success){
                //return 1
                return window.location.href='/csse/pages/recruitment/position';
                }
            }, 'json');
        })
	})
</script>
  </body>
  </html>