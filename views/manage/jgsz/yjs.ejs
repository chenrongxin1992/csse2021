<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>研究所</title>
	<meta name="renderer" content="webkit">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="format-detection" content="telephone=no">
	<link rel="stylesheet" href="../layui/css/layui.css" media="all" />
	<link rel="stylesheet" href="../stylesheets/public.css" media="all" />
	<style>
        .layui-table-cell{
            height: auto !important;
			max-height: 100px !important;
        }
    </style>
</head>
<body class="childrenBody">
	<blockquote class="layui-elem-quote">当前位置：机构设置 > 研究所</blockquote>

	<div class="demoTable">
	  搜索：
	  <div class="layui-inline">
	    <input class="layui-input" name="search" id="search_txt" autocomplete="off">
	  </div>
	  <button class="layui-btn" data-type="reload" id="news_btn"><i class="layui-icon">&#xe615;</i>搜索</button>
	  <button class="layui-btn" data-type="getCheckData" style="float: right;" id="newsadd"><i class="layui-icon">&#xe654;</i>新增</button>
	</div>

	<table id="yjs_table" lay-filter="yjs_table"></table>

<script type="text/javascript" src="../layui/layui.js"></script>
<script type="text/javascript">
layui.use(['jquery','table','form'], function(){ 
    let $ = layui.$ //重点处
    let table = layui.table,
    	form = layui.form
    table.render({
	    elem: '#yjs_table'
	    ,id:'table_yjs'//重载需要
	    ,cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
	    //本地与服务器
        ,url: '<%=base_url%>yjs_data' //数据接口
	    ,page: true //开启分页
        ,limits: [15,30,45]
        ,limit: 15 //每页默认显示的数量
	    ,cols: [[ //表头
	      {type:'numbers', title: '序号',width:60,align:'center'}
	      ,{field: 'title', title: '所名称',align:'center',width:350}
          ,{field: 'pageContent', title: '简介',align:'center'}
		  ,{field: 'fujianPath', title: '图片', align:'center',templet:'#sytpimg',style:'cursor: pointer;',event:'preview',width:230,}
	      ,{field: 'timeAdd', title: '发布时间', align:'center',width:180,}
	      ,{title:'操作', align:'center', toolbar: '#yjfxbar',width:300} //这里的toolbar值是模板元素的选择器
	    ]]
	  });
    //数据重载
    $('#news_btn').on('click', function(){
    	table.reload('table_yjs', {
	        where: {
	            search_txt: $('#search_txt').val()
	        }
	    });
    })
    $('#newsadd').on('click', function(){
    	//do somehing
	    let index = layui.layer.open({
            title : "查看 | 编辑",
            type : 2,
            content : "yjsadd",
            success : function(layero, index){
            },
			end:function(){
				table.reload('table_yjs', {
					where: {
						search_txt: $('#search_txt').val()
					}
				});
			}
        })
        layui.layer.full(index);
	        //改变窗口大小时，重置弹窗的宽高，防止超出可视区域（如F12调出debug的操作）
	        $(window).on("resize",function(){
	            layui.layer.full(index);
	        })
    })
    //监听工具条
	table.on('tool(yjs_table)', function(obj){ //注：tool是工具条事件名，test是table原始容器的属性 lay-filter="对应的值"
	  var data = obj.data; //获得当前行数据
	  var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
	  var tr = obj.tr; //获得当前行 tr 的DOM对象
	  console.log('dddd')
	  if(layEvent === 'edit'){ //查看
	    //do somehing
	    let index = layui.layer.open({
            title : "查看 | 编辑",
            type : 2,
            content : "yjsadd?id="+data.id,
            success : function(layero, index){
            },
			end:function(){
				table.reload('table_yjs', {
					where: {
						search_txt: $('#search_txt').val()
					}
				});
			}
        })
        console.log('index',index)
        layui.layer.full(index);
        //改变窗口大小时，重置弹窗的宽高，防止超出可视区域（如F12调出debug的操作）
        $(window).on("resize",function(){
            layui.layer.full(index);
        })

        //同步更新缓存对应的值
	    // obj.update({
	    //   username: '123'
	    //   ,title: 'xxx'
	    // });
	  } else if(layEvent === 'del'){ //删除
        console.log('data-----',data)
	    layer.confirm('确定删除吗?',{closeBtn: 0}, function(index){
	      obj.del(); //删除对应行（tr）的DOM结构，并更新缓存
	      layer.close(index);
	      //向服务端发送删除指令
	       $.ajax({
               //本地与服务器
                //url:'/manage/newsdel',
			  	url:'<%=base_url%>yjsdel',
			  	type:'POST',
			  	data:data,
			  	dataType : "json",
			  	success:function(result){
			  		if(result.code == 0){
			  			console.log('del success')		
                          layer.msg('ok')	
			  		}
			  	},
			  	error:function(msg){
			  		console.log('ajax delete error msg',msg)
			  	}
			})
	    });
	  } else if(layEvent === 'preview'){
	  	console.log('preview')
	  	let src = ''+ data.fujianPath
	  	layer.photos({ photos: {"data": [{"src": src}]} });
	  }
	});
});
</script>
<script type="text/html" id="yjfxbar">
  <a class="layui-btn layui-btn-xs" lay-event="edit"><i class="layui-icon">&#xe642;</i>编辑</a>
  <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del"><i class="layui-icon">&#xe640;</i>删除</a>
</script>
<script type="text/html" id="sytpimg">
	<img src="{{d.fujianPath}}" style="height: 100px;max-width: 100%;" class="previewimg" />
</script>
</body>
</html>