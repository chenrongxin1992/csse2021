<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>查看 | 编辑 研究所</title>
	<meta name="renderer" content="webkit">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="format-detection" content="telephone=no">
	<link rel="stylesheet" href="../layui/css/layui.css" media="all" />
	<link rel="stylesheet" href="../stylesheets/public.css" media="all" />
	<style type="text/css">
		.handle {
			width: 100%;
            position: absolute;
            background-color: black;
            color: white;
            filter: alpha(Opacity=80);
            -moz-opacity: 0.5;
            opacity: 0.5;
            /* text-align: right; */
            display: none;
			top: 0;
			margin-left: 0px;
        }
        .handle i {
			margin: 0 auto;
    		display: block;
			text-align: center;
        }
         .handle i:hover {
            cursor: pointer;
        }
        .file-iteme {
			position: relative;
			max-width: 150px;
			margin: 0 auto;
        }
		.file-iteme1 {
			position: relative;
			max-width: 150px;
			/* margin: 0 auto; */
        }
		/* #uploadarea{
			text-align: center;
		} */
		
        
	</style>
</head>
<body class="childrenBody">
	<form class="layui-form layui-row layui-col-space10">
		<div class="layui-col-md12 layui-col-xs12">

			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">所名称</label>
					<div class="form-item-inline" >
				      <input type="text" name="title" lay-verify="required" autocomplete="off" class="layui-input" id="title">
				    </div>
				    <label class="layui-form-label" >所名称(EN)</label>
				    <div class="form-item-inline" >
				      <input type="text" name="titleEN"  autocomplete="off" class="layui-input" id="titleEN">
				    </div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">研究所链接</label>
					<div class="form-item-inline" >
				      <input type="text" name="url"  autocomplete="off" class="layui-input" id="url">
				    </div>
				</div>
			</div>
			<div class="layui-form-item">
				<label class="layui-form-label">图片</label>
				<button type="button" class="layui-btn" id="test1">上传</button>
				<span>240*231/159*74</span>
			</div>

			<div class="layui-form-item">
				<label class="layui-form-label">预览图</label>
				<div class="layui-upload-list uploader-list" style="overflow: auto;" id="uploader-list">     
				</div>
				 <!-- <p style="margin-left: 105px;">(1100px * 240px)</p> -->
			</div>
			<div class="layui-form-item">
				<label class="layui-form-label">图片(EN)</label>
				<button type="button" class="layui-btn" id="test2">上传</button>
				<span>240*231/159*74</span>
			</div>

			<div class="layui-form-item">
				<label class="layui-form-label">预览图</label>
				<div class="layui-upload-list uploader-list" style="overflow: auto;" id="uploader-list1">     
				</div>
				 <!-- <p style="margin-left: 105px;">(1100px * 240px)</p> -->
			</div>
			<div class="layui-form-item">
				<label class="layui-form-label">简介</label>
				<div class="layui-input-block" id="intro_bk">
					<textarea id="pageContent"  value="<%=data.pageContent%>" /><%=data.pageContent%></textarea>
				</div>
			</div>

			<div class="layui-form-item">
				<label class="layui-form-label">简介(EN)</label>
				<div class="layui-input-block" id="eintro_bk">
					<textarea id="pageContentEN"  value="<%=data.pageContentEN%>" /><%=data.pageContentEN%></textarea>
				</div>
			</div>

			<div class="layui-form-item">
				<hr class="layui-bg-gray" />
				<div class="layui-col-md-offset1">
					<a class="layui-btn layui-btn-sm" lay-filter="update" lay-submit><i class="layui-icon">&#xe609;</i>保存</a>
				</div>
			</div>
		</div>
	</form>

<script type="text/javascript" src="../manage/js/thirdpart.js"></script>
<!-- <script type="text/javascript" src="newsAdd.js"></script> -->
<script type="text/javascript">
		
$(function(){
	layui.use(['jquery','layer','form','layedit','upload','laydate'], function(){ 
    //let $ = layui.$, //重点处
    let	layedit = layui.layedit,
    	upload = layui.upload,
        laydate = layui.laydate
    //日期
	$(document).on("mouseenter mouseleave", ".file-iteme", function(event){
            if(event.type === "mouseenter"){
                //鼠标悬浮
                $(this).children(".handle").fadeIn("fast");
            }else if(event.type === "mouseleave") {
                //鼠标离开
                $(this).children(".handle").hide();
            }
        });
	// 删除图片
    $(document).on("click", ".file-iteme .handle", function(event){
		let _self = $(this)
		layer.confirm('确定要删除图片吗', {
			btn: ['确定','取消'] //按钮
			}, function(){
				console.log('$(this).parent()-----',$(this).parent(),$(this).parent().parent())
				_self.parent().remove()
				layer.msg('已删除', {icon: 1});
			}, function(){
				layer.msg('已取消', {
					time: 1000, 
				});
		});
    });
	$(document).on("mouseenter mouseleave", ".file-iteme1", function(event){
            if(event.type === "mouseenter"){
                //鼠标悬浮
                $(this).children(".handle").fadeIn("fast");
            }else if(event.type === "mouseleave") {
                //鼠标离开
                $(this).children(".handle").hide();
            }
        });
	// 删除图片
    $(document).on("click", ".file-iteme1 .handle", function(event){
		let _self = $(this)
		layer.confirm('确定要删除图片吗', {
			btn: ['确定','取消'] //按钮
			}, function(){
				console.log('$(this).parent()-----',$(this).parent(),$(this).parent().parent())
				_self.parent().remove()
				layer.msg('已删除', {icon: 1});
			}, function(){
				layer.msg('已取消', {
					time: 1000, 
				});
		});
    });
    //图标上传
	let uploadInst1 = upload.render({
	    elem: '#test2'
        //本地与服务器
	    ,url: '<%=base_url%>yjsupload'
		,multiple: true
		,accept:"file"
        ,exts: 'jpg|jpeg|gif|png'
	    ,before: function(obj){
			console.log('try......')
			layer.msg('图片上传中...', {
                icon: 16,
                shade: 0.01,
                time: 0
            })
	    }
	    ,done: function(res){
			layer.close(layer.msg());//关闭上传提示窗口
	      console.log('upload success',res)
		  $('#uploader-list1').empty()
		  $('#uploader-list1').append(
                    '<div id="" class="file-iteme1">' +
                    '<div class="handle"><i class="layui-icon layui-icon-delete"></i></div>' +
                    '<img style="height: 150px;" class="fmpic1" src='+ res.data +'>' +
                    '</div>'
                );
          layer.msg('图片上传成功')
	      //上传成功
	    }
	    ,error: function(){
	      layer.msg('上传失败，请联系CRX')
	    }
	  });
	let uploadInst = upload.render({
	    elem: '#test1'
        //本地与服务器
	    ,url: '<%=base_url%>yjsupload'
		,multiple: true
		,accept:"file"
        ,exts: 'jpg|jpeg|gif|png'
	    ,before: function(obj){
			console.log('try......')
			layer.msg('图片上传中...', {
                icon: 16,
                shade: 0.01,
                time: 0
            })
	    }
	    ,done: function(res){
			layer.close(layer.msg());//关闭上传提示窗口
	      console.log('upload success',res)
		 $('#uploader-list').empty()
		  $('#uploader-list').append(
                    '<div id="" class="file-iteme">' +
                    '<div class="handle"><i class="layui-icon layui-icon-delete"></i></div>' +
                    '<img style="height: 150px;" class="fmpic" src='+ res.data +'>' +
                    '</div>'
                );
          layer.msg('图片上传成功')
	      //上传成功
	    }
	    ,error: function(){
	      layer.msg('上传失败，请联系CRX')
	    }
	  });

    let form = layui.form,layer = layui.layer
    //先得到当前iframe层的索引
    let id = '<%-data.id%>'
    let pageContent = CKEDITOR.replace("pageContent");
	let pageContentENEditor = CKEDITOR.replace("pageContentEN");
	$('#copy').bind('click',function(){
		pageContentENEditor.setData(pageContent.getData())
	})
		
    if(id==''||id==null||typeof(id)=='undefined'){
		console.log('新增',id)
	}else{
         //初始化表单值
        $('#title').val('<%- data.title%>')
		$('#url').val('<%- data.url%>')
        if('<%- data.titleEN%>'){
    	    $('#titleEN').val('<%- data.titleEN%>')
        }
		//初始化封面图
		let fujianarr = ('<%=data.fujianPath%>').split(';')
		fujianarr.forEach(function(item,index){
			$('#uploader-list').append(
                    '<div id="" class="file-iteme">' +
                    '<div class="handle"><i class="layui-icon layui-icon-delete"></i></div>' +
                    '<img style="height: 150px;" class="fmpic" src='+item+' ></div>'
                );
		})
		let fujianarr1 = ('<%=data.fujianPath1%>').split(';')
		console.log('fujianarr1',fujianarr1)
		if(fujianarr1.length!=0){
			fujianarr1.forEach(function(item,index){
				console.log('item',item)
				if(item){
					$('#uploader-list1').append(
						'<div id="" class="file-iteme1">' +
						'<div class="handle"><i class="layui-icon layui-icon-delete"></i></div>' +
						'<img style="height: 150px;" class="fmpic1" src='+item+' ></div>'
					);
				}
			})
		}
		
  		form.render()
	}
    form.on('submit(update)', function(data){
	  
      //checkbox
    	let topstr = ''
    	 $("input:checkbox[name='isTop']:checked").each(function(i){
                console.log('checkbox',$(this).val())
                topstr += $(this).val() + ';';
         });
         console.log('topstr',topstr)
	  //更新
	  data.field.id = id
	   data.field.pageContent =pageContent.getData()
	  data.field.pageContentEN = pageContentENEditor.getData()
	  data.field.title = $('#title').val()
      data.field.titleEN = $('#titleEN').val()
	  data.field.url = $('#url').val()
	  if($('.fmpic').length!=0){
	  //	console.log('ddddd---------------------------',$('.fmpic'))
		//20211030
		let fujianstr = ''
		$('.fmpic').each(function(index,obj){
			//console.log('ddddd---------------------------',$(obj))
			fujianstr += $(obj).attr('src') + ';'
		})
	  	data.field.fujianPath = fujianstr//.slice(8)//去掉
	  }else{
		  layer.msg('请上传封面图')
		  return false
	  }
	  if($('.fmpic1').length!=0){
	  	console.log('ddddd---------------------------',$('.fmpic1'))
		//20211030
		let fujianstr1 = ''
		$('.fmpic1').each(function(index,obj){
			console.log('eee---------------------------',$(obj).attr('src'))
			if($(obj).attr('src')){
				fujianstr1 += $(obj).attr('src') + ';'
			}
		})
	  	data.field.fujianPath1 = fujianstr1//.slice(8)//去掉
	  }else{
		  layer.msg('请上传封面图EN')
		  return false
	  }

	  console.log('提交数据',data.field)
     //return false
	  $.ajax({
          //本地与服务器
        url:'<%=base_url%>yjsadd',
        //url:'/manage/jrxwadd',
	  	type:'POST',
	  	data:data.field,
	  	dataType : "json",
	  	success:function(result){
	  		if(result.code == 0){
	  			console.log('update success')
	  			//墨绿深蓝风
				let frameindex = layer.alert('保存成功', {
				  skin: 'layui-layer-molv' //样式类名
				  ,closeBtn: 0
				}, function(){
					parent.CloseCurrentTab()
					layer.close(frameindex);
				});	  			
	  		}
	  	},
	  	error:function(msg){
	  		console.log('ajax error msg',msg)
	  	}
	  })
	});
})
})

</script>
</body>
</html>