  <a class="layui-btn layui-btn-xs" lay-event="detailpreview"  target="_blank">预览</a>
  <a class="layui-btn layui-btn-xs" lay-event="edit"><i class="layui-icon">&#xe642;</i>编辑</a>
  {{# if(d.review != 1 && (d.power == '管理员' || '<%=username%>' == '陈荣鑫' ||'<%=username%>' == '何文锋')){ }} 
  <a class="layui-btn layui-btn-xs" lay-event="review"><i class="layui-icon">&#xe642;</i>审核通过</a>
  {{# } }}
