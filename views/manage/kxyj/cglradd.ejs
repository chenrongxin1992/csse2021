<script type="text/javascript">
		
$(function(){
	// 以下为默认配置，重新配置后将覆盖
	
	layui.use(['jquery','layer','form','layedit','upload','laydate'], function(){ 
    //let $ = layui.$, //重点处
    let	layedit = layui.layedit,
    	upload = layui.upload,
        laydate = layui.laydate
    //日期
	$(document).on("mouseenter mouseleave", ".file-iteme", function(event){
            if(event.type === "mouseenter"){
                //鼠标悬浮
                $(this).children(".handle").fadeIn("fast");
            }else if(event.type === "mouseleave") {
                //鼠标离开
                $(this).children(".handle").hide();
            }
        });
	// 删除图片
    $(document).on("click", ".file-iteme .handle", function(event){
		layer.confirm('确定要删除图片吗', {
			btn: ['确定','取消'] //按钮
			}, function(){
				console.log('$(this).parent()-----',$(this).parent(),$(this).parent().parent())
				$('#fmpic').parent().remove()
				layer.msg('已删除', {icon: 1});
			}, function(){
				layer.msg('已取消', {
					time: 1000, 
				});
		});
    });
    //图标上传
	let uploadInst = upload.render({
	    elem: '#test1'
        //本地与服务器
	    ,url: '<%=base_url%>cglrupload'
		,accept:"file"
        ,exts: 'jpg|jpeg|gif|png'
	    ,before: function(obj){
			console.log('try......')
			layer.msg('图片上传中...', {
                icon: 16,
                shade: 0.01,
                time: 0
            })
	    }
	    ,done: function(res){
			layer.close(layer.msg());//关闭上传提示窗口
	      console.log('upload success',res)
		  $('#uploader-list').append(
                    '<div id="" class="file-iteme">' +
                    '<div class="handle"><i class="layui-icon layui-icon-delete"></i></div>' +
                    '<img style="height: 150px;" id="fmpic" src='+ res.data +'>' +
                    '</div>'
                );
          layer.msg('图片上传成功')
	      //上传成功
	    }
	    ,error: function(){
	      layer.msg('上传失败，请联系CRX')
	    }
	  });
	  upload.render({
	    elem: '#tzggupload'
	    ,url: '<%=base_url%>cglrupload'
	    ,accept : 'file'
		,exts: 'pdf'
	    ,multiple: true
	    ,before:function(obj){
	    	let files = obj.pushFile()
	    	console.log('files',files)
	    	let filelist = []
   			obj.preview(function(index, file, result){
   			 	console.log(index); //得到文件索引
      			console.log(file); //得到文件对象
      			//console.log(result); //得到文件base64编码，比如图片
      			//这里还可以做一些 append 文件列表 DOM 的操作
      			$('#fujian').append('<p id="pid'+index+'">' + file.name + '<a id="fileindex'+ index +'" class="layui-btn layui-btn-danger layui-btn-xs filedelbtn"> 删除 </p>')
      			$('#fileindex'+index).bind('click',function(){
      				console.log('delete file',files)
			      		delete files[index];//删除
			      		$(this).parent().remove();
			     })
     		})
	    },
	    allDone: function(obj){ //当文件全部被提交后，才触发
	    	console.log('allDone',obj)
		    console.log(obj.total); //得到总文件数
		    console.log(obj.successful); //请求成功的文件数
		    console.log(obj.aborted); //请求失败的文件数
		    //$('#fujian').html(filelist)
		}
	    ,done: function(res,index,upload){//服务端响应信息、当前文件的索引、重新上传的方法
	      console.log(res)
	      console.log('done')
	      console.log('index',index)
	      //假设code=0代表上传成功
	      //let filelist = []
		    if(res.errno == 0){
				console.log((res.data),(res.returnfilename)[0])
		    	$('#pid'+index).attr('path',(res.data))
		    	$('#pid'+index).attr('name',(res.returnfilename)[0])	
		    }
	    }
	});
    let form = layui.form,layer = layui.layer
    //先得到当前iframe层的索引
    let id = '<%-data.id%>'
    let ue1,ue2
		ue1 = UE.getEditor('intro',{'initialFrameHeight':'350','initialFrameWidth':'100%'})
		ue1.ready(function () {//研究方向
	   		console.log('pageContent...',)
	   		let htmlStr = $("#pageContent").val()
	   		ue1.setContent(htmlStr,false)
	    });
		ue2 = UE.getEditor('eintro',{'initialFrameHeight':'350','initialFrameWidth':'100%'})
		ue2.ready(function () {//简介  content = content.replace(new RegExp("<","g"),"<").replace(new RegExp(">","g"),">").replace(new RegExp("\"","g"),""");
	   		console.log('pageContentEN...')
	   		let htmlStr = $("#pageContentEN").val();
	   		ue2.setContent(htmlStr,false)
	    });
		
    if(id==''||id==null||typeof(id)=='undefined'){
		console.log('新增',id)
	}else{
         //初始化表单值
        $('#title').val('<%- data.title%>')
        $('#year').val('<%- data.year%>')
        $('#kanwu').val('<%- data.kanwu%>')
        $('#zuozhe').val('<%- data.zuozhe%>')
		$('#danwei').val('<%- data.danwei%>')
        $('#belongsto').val('<%=data.belongsto%>')
		//20211106
		let patharr = '<%=data.patharr%>',
			namearr = '<%=data.namearr%>'
		patharr = patharr.split(',')
		namearr = namearr.split(',')
		if(patharr.length!=0){
			console.log('patharr----->',patharr)
			patharr.forEach(function(item,index){
				$('#fujian').append('<p id="pid'+index+'" path='+item+'>' + namearr[index] + '<a id="fileindex'+ index +'" class="layui-btn layui-btn-danger layui-btn-xs filedelbtn"> 删除 </p>')
				$('#fileindex'+index).bind('click',function(){
			      		$(this).parent().remove();
			     })
			})
		}
		//初始化封面图
		$('#uploader-list').append(
                    '<div id="" class="file-iteme">' +
                    '<div class="handle"><i class="layui-icon layui-icon-delete"></i></div>' +
                    '<img style="height: 150px;" id="fmpic" src=<%-data.fujianPath%> ></div>'
                );
  		form.render()
	}
    form.on('submit(update)', function(data){
	  //附件
	  let $pitem = $('#fujian p'),
	  	  patharr = '',
	  	  namearr = ''
	  $('#fujian p').each(function(){
	  	patharr = patharr + $(this).attr('path') + ','
	  	namearr = namearr + $(this).attr('name') + ','
	  	console.log(patharr)
	  	console.log(namearr)
	  })
      //checkbox
    	let topstr = ''
    	 $("input:checkbox[name='isTop']:checked").each(function(i){
                console.log('checkbox',$(this).val())
                topstr += $(this).val() + ';';
         });
         console.log('topstr',topstr)
	  //更新
	  data.field.id = id
	  data.field.pageContent =ue1.getContent()
	  data.field.pageContentEN = ue2.getContent()
	  data.field.patharr = patharr.substring(0,patharr.length-1)
	  data.field.namearr = namearr.substring(0,namearr.length-1)
	  data.field.title = $('#title').val()
      data.field.year = $('#year').val()
      data.field.kanwu = $('#kanwu').val()
      data.field.zuozhe = $('#zuozhe').val()
	  data.field.danwei = $('#danwei').val()
      data.field.belongsto = $('#belongsto option:selected').val()
	  data.field.belongstoid = $('#belongsto option:selected').attr('belongstoid')
	  if($('#fmpic').attr('src')){
	  	console.log('ddddd---------------------------',$('#demo1').attr('src'))
	  	data.field.fujianPath = $('#fmpic').attr('src')//.slice(8)//去掉
	  }else{
		  layer.msg('请上传封面图')
		  return false
	  }

	  console.log('提交数据',data.field)
     //return false
	  $.ajax({
          //本地与服务器
        url:'<%=base_url%>cglradd',
	  	type:'POST',
	  	data:data.field,
	  	dataType : "json",
	  	success:function(result){
	  		if(result.code == 0){
	  			console.log('update success')
	  			//墨绿深蓝风
				let frameindex = layer.alert('保存成功', {
				  skin: 'layui-layer-molv' //样式类名
				  ,closeBtn: 0
				}, function(){
					layer.close(frameindex);///关闭当前
					
					let index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
						parent.layer.close(index); 
						console.log('father -----',index)
				});	  			
	  		}
	  	},
	  	error:function(msg){
	  		console.log('ajax error msg',msg)
	  	}
	  })
	});
})
})

</script>
</body>
