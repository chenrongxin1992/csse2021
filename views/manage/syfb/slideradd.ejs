<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>查看 | 编辑</title>
	<meta name="renderer" content="webkit">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="format-detection" content="telephone=no">
	<link rel="stylesheet" href="../layui/css/layui.css" media="all" />
	<link rel="stylesheet" href="../stylesheets/public.css" media="all" />
	<style type="text/css">
		.w-e-text-container{
	    	height: 250px !important;
	    }
	    .layui-form-select dl{
	        z-index: 99999;
	    }
		.uploader-list {
            margin-left: -15px;
        }
        .uploader-list .info {
            position: relative;
            margin-top: -25px;
            background-color: black;
            color: white;
            filter: alpha(Opacity=80);
            -moz-opacity: 0.5;
            opacity: 0.5;
            width: 100px;
            height: 25px;
            text-align: center;
            display: none;
        }
        .uploader-list .handle {
			width: 100%;
            position: absolute;
            background-color: black;
            color: white;
            filter: alpha(Opacity=80);
            -moz-opacity: 0.5;
            opacity: 0.5;
            /* text-align: right; */
            display: none;
			right: 0;
        }
        .uploader-list .handle i {
			margin: 0 auto;
    		display: block;
			text-align: center;
        }
        .uploader-list .handle i:hover {
            cursor: pointer;
        }
        .uploader-list .file-iteme {
            margin: 12px 0 0 15px;
            padding: 1px;
            float: left;
			position: relative;
        }
	</style>
</head>
<body class="childrenBody">
	<form class="layui-form layui-row layui-col-space10">
		<div class="layui-col-md12 layui-col-xs12">

			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">标题</label>
					<div class="layui-input-inline" style="width: 450px;">
				      <input type="text" name="title" lay-verify="required" autocomplete="off" class="layui-input" id="title">
				    </div>
				    <label class="layui-form-label" >标题(EN)</label>
				    <div class="layui-input-inline" style="width: 450px;">
				      <input type="text" name="title1"  autocomplete="off" class="layui-input" id="title1">
				    </div>
				   
				</div>
			</div>
            <div class="layui-form-item">
				<label class="layui-form-label">链接</label>
				<div class="layui-input-inline" style="width: 450px;">
                    <input type="text" name="url" lay-verify="required" autocomplete="off" class="layui-input" id="url">
                  </div>
			</div>
			<div class="layui-form-item">
				<label class="layui-form-label">照片</label>
				<button type="button" class="layui-btn" id="test1">上传</button>
			</div>

			<div class="layui-form-item">
				<label class="layui-form-label">预览图</label>
				<div class="layui-upload-list uploader-list" style="overflow: auto;" id="uploader-list">     
				</div>
				<!-- <div class="layui-upload-list">
				    <img class="layui-upload-img" id="demo1" style="max-height: 240px;">
				    <p id="demoText"></p>
				    
				 </div>
				 <p style="margin-left: 105px;">(1100px * 240px)</p> -->
			</div>

			<div class="layui-form-item">
				<label class="layui-form-label">简介</label>
				<div class="layui-input-block" id="intro_bk">
					<input id="jianjie"  value="<%=data.jianjie%>" type="hidden" />
					<script id="intro" type="text/plain" ></script>
				</div>
			</div>

			<div class="layui-form-item">
				<label class="layui-form-label">简介(EN)</label>
				<div class="layui-input-block" id="eintro_bk">
					<input id="jianjie1"  value="<%=data.jianjie1%>" type="hidden" />
					<script id="eintro" type="text/plain" ></script>
				</div>
			</div>

			<div class="layui-form-item">
				<hr class="layui-bg-gray" />
				<div class="layui-col-md-offset1">
					<a class="layui-btn layui-btn-sm" lay-filter="update" lay-submit><i class="layui-icon">&#xe609;</i>保存</a>
				</div>
			</div>
		</div>
	</form>

<script type="text/javascript" src="../layui/layui.js"></script>
<script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
<script type="text/javascript" charset="utf-8" src="../ueditor/ueditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="../ueditor/ueditor.all.js"> </script>
<script type="text/javascript" charset="utf-8" src="../ueditor/lang/zh-cn/zh-cn.js"> </script>
<!-- <script type="text/javascript" src="newsAdd.js"></script> -->
<script type="text/javascript">

$(function(){
	layui.use(['jquery','layer','form','layedit','upload'], function(){ 
		$(document).on("mouseenter mouseleave", ".file-iteme", function(event){
            if(event.type === "mouseenter"){
                //鼠标悬浮
                $(this).children(".handle").fadeIn("fast");
            }else if(event.type === "mouseleave") {
                //鼠标离开
                $(this).children(".handle").hide();
            }
        });
	// 删除图片
    $(document).on("click", ".file-iteme .handle", function(event){
		layer.confirm('确定要删除图片吗', {
			btn: ['确定','取消'] //按钮
			}, function(){
				console.log('$(this).parent()-----',$(this).parent(),$(this).parent().parent())
				$('#fmpic').parent().remove()
				layer.msg('已删除', {icon: 1});
			}, function(){
				layer.msg('已取消', {
					time: 1000, 
				});
		});
    });
    //let $ = layui.$, //重点处
    let	layedit = layui.layedit,
    	upload = layui.upload
    let form = layui.form,layer = layui.layer
    let frameindex = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
    let id = '<%-data.id%>'
    let ue1,ue2,ue3,ue4,ue5,ue6
		ue1 = UE.getEditor('intro',{'initialFrameHeight':'350','initialFrameWidth':'100%'})
		ue1.ready(function () {//研究方向
	   		console.log('初始jianjie...',)
	   		let htmlStr = $("#jianjie").val()
	   		ue1.setContent(htmlStr,false)
	    });
		ue2 = UE.getEditor('eintro',{'initialFrameHeight':'350','initialFrameWidth':'100%'})
		ue2.ready(function () {//简介  content = content.replace(new RegExp("<","g"),"<").replace(new RegExp(">","g"),">").replace(new RegExp("\"","g"),""");
	   		console.log('初始jianjie1...')
	   		let htmlStr = $("#jianjie1").val();
	   		ue2.setContent(htmlStr,false)
	    });
		
    if(id==''||id==null||typeof(id)=='undefined'){
		console.log('新增',id)
	}else{
		console.log('编辑',id)
		$('#title').val('<%-data.title%>')
		$('#title1').val('<%-data.title1%>')
        $('#url').val('<%-data.url%>')
		// $('#demo1').attr('src', ''+'<%-data.pic%>')
		//初始化封面图
		$('#uploader-list').append(
                    '<div id="" class="file-iteme">' +
                    '<div class="handle"><i class="layui-icon layui-icon-delete"></i></div>' +
                    '<img style="height: 150px;" id="fmpic" src=<%-data.pic%> ></div>'
                );
  		form.render()
	}

    //图标上传
	let uploadInst = upload.render({
	    elem: '#test1'
        //本地与服务器
	    ,url: '/csse/manage/sliderupload'
        //,url: '/manage/ptlogoupload'
	    ,before: function(obj){
	      //预读本地文件示例，不支持ie8
	      console.log('try......')
			layer.msg('图片上传中...', {
                icon: 16,
                shade: 0.01,
                time: 0
            })
	    }
	    ,done: function(res){
		  layer.close(layer.msg());//关闭上传提示窗口
	      console.log('upload success',res)
		  $('#uploader-list').append(
                    '<div id="" class="file-iteme">' +
                    '<div class="handle"><i class="layui-icon layui-icon-delete"></i></div>' +
                    '<img style="height: 150px;" id="fmpic" src='+ res.data +'>' +
                    '</div>'
                );
          layer.msg('图片上传成功')
	    //   console.log('upload success',res)
	    //   $('#demo1').attr('src', ''+(res.data))
        //   layer.msg('图片上传成功')
	      //上传成功
	    }
	    ,error: function(){
	      //演示失败状态，并实现重传
	      let demoText = $('#demoText');
	      demoText.html('<span style="color: #FF5722;">上传失败</span> ');
	      demoText.find('.demo-reload').on('click', function(){
	        uploadInst.upload();
	      });
	    }
	  });

    form.on('submit(update)', function(data){
	  console.log('update data field',data.field);
	  //更新
	  data.field.id = id
	  data.field.jianjie =ue1.getContent()
	  data.field.jianjie1 = ue2.getContent()
	  //data.field.leaderintro = editor3.txt.html()
	  //data.field.eleaderintro = editor4.txt.html()
	  //data.field.bgcolor = $('#bgcolor').val()
	  data.field.title = $('#title').val()
      data.field.url = $('#url').val()
	  data.field.title1 = $('#title1').val()
	  if($('#fmpic').attr('src')){
	  	console.log('ddddd---------------------------',$('#demo1').attr('src'))
	  	data.field.pic = $('#fmpic').attr('src')//.slice(8)//去掉
	  }else{
		  layer.msg('请上传封面图')
		  return false
	  }
	//   if($('#demo1').attr('src')){
	//   	console.log('ddddd---------------------------',$('#demo1').attr('src'))
	//   	data.field.pic = $('#demo1').attr('src')//.slice(8)//去掉
	//   }

	  console.log('提交数据',data.field)
     // return false
	  $.ajax({
          //本地与服务器
        url:'/csse/manage/slideradd',
        //url:'/manage/slideradd',
	  	type:'POST',
	  	data:data.field,
	  	dataType : "json",
	  	success:function(result){
	  		if(result.code == 0){
	  			console.log('update success')
	  			//墨绿深蓝风
				let frameindex = layer.alert('保存成功', {
				  skin: 'layui-layer-molv' //样式类名
				  ,closeBtn: 0
				}, function(){
					layer.close(frameindex);
				});	  			
	  		}
	  	},
	  	error:function(msg){
	  		console.log('ajax error msg',msg)
	  	}
	  })
	});
})
})

</script>
</body>
</html>