<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>通知公告</title>
	<meta name="renderer" content="webkit">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="format-detection" content="telephone=no">
	<link rel="stylesheet" href="../layui/css/layui.css" media="all" />
	<link rel="stylesheet" href="../stylesheets/public.css" media="all" />
</head>
<body class="childrenBody">
	<blockquote class="layui-elem-quote">当前位置：首页发布 > 通知公告</blockquote>

	<div class="demoTable">
	  搜索：
	  <div class="layui-inline">
	    <input class="layui-input" name="search" id="search_txt" autocomplete="off">
	  </div>
	  <button class="layui-btn" data-type="reload" id="news_btn"><i class="layui-icon">&#xe615;</i>搜索</button>
	  <button class="layui-btn" data-type="getCheckData" style="float: right;" id="noticeadd"><i class="layui-icon">&#xe654;</i>新增</button>
	</div>

	<table id="notice_table" lay-filter="notice_table"></table>

<script type="text/javascript" src="../layui/layui.js"></script>
<script type="text/javascript">
layui.use(['jquery','table','form'], function(){ 
    let $ = layui.$ //重点处
    let table = layui.table,
    	form = layui.form
    table.render({
	    elem: '#notice_table'
	    ,id:'table_notice'//重载需要
	    ,cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
	    //本地与服务器
        ,url: '/csse/manage/notice_data' //数据接口
        //,url: '/manage/news_data' //数据接口
	    ,page: true //开启分页
        ,limits: [15,30,45]
        ,limit: 15 //每页默认显示的数量
	    ,cols: [[ //表头
	      {field: 'id', title: '序号',width:90,align:'center'}
	      ,{field: 'title', title: '标题',align:'center'}
          ,{field: 'pageContent', title: '内容',align:'center'}
	      ,{field: 'timeAdd', title: '发布时间', align:'center'}
	      ,{title:'操作', align:'center', toolbar: '#yjfxbar'} //这里的toolbar值是模板元素的选择器
	    ]]
	  });
    //数据重载
    $('#news_btn').on('click', function(){
    	table.reload('table_notice', {
	        where: {
	            search_txt: $('#search_txt').val()
	        }
	    });
    })
    $('#noticeadd').on('click', function(){
    	//do somehing
	    let index = layui.layer.open({
            title : "查看 | 编辑",
            type : 2,
            content : "noticeadd",
            success : function(layero, index){
            }
        })
        layui.layer.full(index);
	        //改变窗口大小时，重置弹窗的宽高，防止超出可视区域（如F12调出debug的操作）
	        $(window).on("resize",function(){
	            layui.layer.full(index);
	        })
    })
    //监听工具条
	table.on('tool(notice_table)', function(obj){ //注：tool是工具条事件名，test是table原始容器的属性 lay-filter="对应的值"
	  var data = obj.data; //获得当前行数据
	  var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
	  var tr = obj.tr; //获得当前行 tr 的DOM对象
	  console.log('dddd')
	  if(layEvent === 'edit'){ //查看
	    //do somehing
	    let index = layui.layer.open({
            title : "查看 | 编辑",
            type : 2,
            content : "noticeadd?id="+data.id,
            success : function(layero, index){
            }
        })
        console.log('index',index)
        layui.layer.full(index);
        //改变窗口大小时，重置弹窗的宽高，防止超出可视区域（如F12调出debug的操作）
        $(window).on("resize",function(){
            layui.layer.full(index);
        })

        //同步更新缓存对应的值
	    // obj.update({
	    //   username: '123'
	    //   ,title: 'xxx'
	    // });
	  } else if(layEvent === 'del'){ //删除
	    layer.confirm('确定删除吗?',{skin: 'layui-layer-molv' //样式类名
				                     ,closeBtn: 0}, function(index){
	      obj.del(); //删除对应行（tr）的DOM结构，并更新缓存
	      layer.close(index);
	      //向服务端发送删除指令
	       $.ajax({
               //本地与服务器
                //url:'/manage/noticedel',
			  	url:'/csse/manage/noticedel',
			  	type:'POST',
			  	data:data,
			  	dataType : "json",
			  	success:function(result){
			  		if(result.code == 0){
			  			console.log('del success')			
			  		}
			  	},
			  	error:function(msg){
			  		console.log('ajax delete error msg',msg)
			  	}
			})
	    });
	  }  else if(layEvent === 'inuse'){//设置前台是否显示
	  	console.log('inuse')
	  	console.log('data------',data)
	  	if($(this).text()=='隐藏'){
	  		console.log('不显示')
	  		data.isDisplay=0
	  		let _this = $(this)
	  		$.ajax({
                //本地与服务器
                //url:'/manage/changenoticedisplay',
			  	url:'/csse/manage/changenoticedisplay',
			  	type:'POST',
			  	data:data,
			  	dataType : "json",
			  	success:function(result){
			  		if(result.code == 0){
			  			console.log('hide success',_this)
			  			_this.text('显示')
                          layer.msg('ok')		
			  		}
			  	},
			  	error:function(msg){
			  		console.log('ajax hide error msg',msg)
			  	}
			})
	  	}else{
	  		console.log('显示平台')
	  		data.isDisplay=1
	  		let _this = $(this)
	  		$.ajax({
			  	//本地与服务器
                //url:'/manage/changenoticedisplay',
                url:'/csse/manage/changenoticedisplay',
			  	type:'POST',
			  	data:data,
			  	dataType : "json",
			  	success:function(result){
			  		if(result.code == 0){
			  			console.log('view success',_this)		
			  			_this.text('隐藏')	
                          layer.msg('ok')
			  		}
			  	},
			  	error:function(msg){
			  		console.log('ajax view error msg',msg)
			  	}
			})
	  	}
	  	return false
	  }else if(layEvent === 'changetop'){//设置前台是否显示
	  	console.log('changetop')
	  	console.log('data------',data)
	  	if($(this).text()=='取消置顶'){
	  		console.log('取消置顶')
	  		data.isTop=0
	  		let _this = $(this)
	  		$.ajax({
                //本地与服务器
                //url:'/manage/changenewstop',
			  	url:'/csse/manage/changenoticetop',
                	type:'POST',
			  	data:data,
			  	dataType : "json",
			  	success:function(result){
			  		if(result.code == 0){
			  			console.log('hide success',_this)
			  			_this.text('置顶')	
                          layer.msg('ok')	
			  		}
			  	},
			  	error:function(msg){
			  		console.log('ajax hide error msg',msg)
			  	}
			})
	  	}else{
	  		console.log('置顶')
	  		data.isTop=1
	  		let _this = $(this)
	  		$.ajax({
			  	//本地与服务器
                //url:'/manage/changenewstop',
                url:'/csse/manage/changenoticetop',
			  	type:'POST',
			  	data:data,
			  	dataType : "json",
			  	success:function(result){
			  		if(result.code == 0){
			  			console.log('view success',_this)		
			  			_this.text('取消置顶')	
                          layer.msg('ok')
			  		}
			  	},
			  	error:function(msg){
			  		console.log('ajax view error msg',msg)
			  	}
			})
	  	}
	  	return false
	  }
	});
});
</script>
<script type="text/html" id="yjfxbar">
  {{# if(d.isDisplay == 1){ }}
  	<a class="layui-btn layui-btn-xs" lay-event="inuse" value='1'>隐藏</a>
  {{# }else{ }}
  	<a class="layui-btn layui-btn-xs" lay-event="inuse" value='0'>显示</a>
  {{# } }}
  {{# if(d.isTop == 1){ }}
  	<a class="layui-btn layui-btn-xs" lay-event="changetop" value='1'>取消置顶</a>
  {{# }else{ }}
  	<a class="layui-btn layui-btn-xs" lay-event="changetop" value='0'>置顶</a>
  {{# } }}
  <a class="layui-btn layui-btn-xs" lay-event="edit"><i class="layui-icon">&#xe642;</i>编辑</a>
  <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del"><i class="layui-icon">&#xe640;</i>删除</a>
</script>
</body>
</html>