<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>新增新闻</title>
	<meta name="renderer" content="webkit">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="format-detection" content="telephone=no">
	<link rel="stylesheet" href="../layui/css/layui.css" media="all" />
	<link rel="stylesheet" href="../stylesheets/public.css" media="all" />
</head>
<body class="childrenBody">
	<form class="layui-form layui-row layui-col-space10">
		<div class="layui-col-md12 layui-col-xs12">

			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">标题<b style="color: red;">*</b></label>
					<div class="layui-input-inline" style="width: 272px;">
				      <input type="text" name="title" lay-verify="required" autocomplete="off" class="layui-input" id="title">
				    </div>
				    <label class="layui-form-label" style="width: 120px;">标题(EN)</label>
				    <div class="layui-input-inline" style="width: 272px;">
				      <input type="text" name="etitle"  autocomplete="off" class="layui-input" id="etitle">
				    </div>
				</div>
			</div>

			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">发布时间<b style="color: red;">*</b></label>
					<div class="layui-input-inline" style="width: 272px;">
	        			<input type="text" class="layui-input" id="time" placeholder="yyyy-MM-dd" lay-verify="required">
	      			</div>
				</div>
			</div>

			<div class="layui-form-item">
				<label class="layui-form-label">内容<b style="color: red;">*</b></label>
				<div class="layui-input-block" id="content_bk">
					<script id="content" type="text/plain" ></script>
				</div>
			</div>

			<div class="layui-form-item">
				<label class="layui-form-label">内容(EN)</label>
				<div class="layui-input-block" id="econtent_bk">
					<script id="econtent" type="text/plain" ></script>
				</div>
			</div>

			<div class="layui-form-item">
				<label class="layui-form-label ">归属于</label>
					<div class="layui-input-block" >
				      <% ptxx.forEach(function(item){%>
					  	<input type="checkbox" name="showin" value="<%=item.id%>" title="<%=item.name%>" id="<%=item.id%>">
					  <%})%>
				    </div> 
	       </div>

			<div class="layui-form-item">
				<hr class="layui-bg-gray" />
				<div class="layui-col-md-offset1">
					<a class="layui-btn layui-btn-sm" lay-filter="update" lay-submit><i class="layui-icon">&#xe609;</i>保存</a>
				</div>
			</div>
		</div>
	</form>

<script type="text/javascript" src="../layui/layui.js"></script>
<script type="text/javascript" src="https://unpkg.com/wangeditor@3.1.1/release/wangEditor.min.js"></script>
<!-- <script type="text/javascript" src="newsAdd.js"></script> -->
<script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
<script type="text/javascript" charset="utf-8" src="../ueditor/ueditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="../ueditor/ueditor.all.js"> </script>
<script type="text/javascript" charset="utf-8" src="../ueditor/lang/zh-cn/zh-cn.js"> </script>
<script type="text/javascript">
layui.use(['jquery','layer','form','laydate'], function(){ 
    let $ = layui.$, //重点处
    	laydate = layui.laydate
    let form = layui.form,layer = layui.layer
    let frameindex = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
    console.log('frameindex',frameindex)
    //日期
    laydate.render({
	    elem: '#time'
	});
	 let ue1,ue2
		ue1 = UE.getEditor('content',{'initialFrameHeight':'350','initialFrameWidth':'100%'})
		ue1.ready(function () {//研究方向
	   		console.log('初始内容...')
	    });
		ue2 = UE.getEditor('econtent',{'initialFrameHeight':'350','initialFrameWidth':'100%'})
		ue2.ready(function () {//简介  content = content.replace(new RegExp("<","g"),"<").replace(new RegExp(">","g"),">").replace(new RegExp("\"","g"),""");
	   		console.log('初始内容EN...')
	    });
    form.on('submit(update)', function(data){
    	//复选框
            let showinarr = new Array();
            $("input:checkbox[name='showin']:checked").each(function(i){
                showinarr.push($(this).val())
            })
			console.log('showinarr',showinarr)
			showinarr = showinarr.join(';')
			console.log('showinarr',showinarr)

	  //更新
	  data.field.title = $('#title').val()
	  data.field.etitle = $('#etitle').val()
	  data.field.time = $('#time').val()
	  data.field.content = ue1.getContent()
	  data.field.econtent = ue2.getContent()
	  data.field.showin = showinarr
	  console.log('news add  data field',data.field);
	  $.ajax({
	  	url:'/manage/newsadd',
	  	type:'POST',
	  	data:data.field,
	  	dataType : "json",
	  	success:function(result){
	  		if(result.code == 0){
	  			console.log('update success')
	  			//墨绿深蓝风
				layer.alert('新增成功', {
				  skin: 'layui-layer-molv' //样式类名
				  ,closeBtn: 0
				}, function(){
					layer.close(frameindex);
				});	  			
	  		}
	  	},
	  	error:function(msg){
	  		console.log('ajax error msg',msg)
	  	}
	  })
	});
  
})
</script>
</body>
</html>