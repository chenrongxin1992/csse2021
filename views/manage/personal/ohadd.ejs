<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>查看 | 编辑 OfficeHour</title>
	<meta name="renderer" content="webkit">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="format-detection" content="telephone=no">
	<link rel="stylesheet" href="../layui/css/layui.css" media="all" />
	<link rel="stylesheet" href="../stylesheets/public.css" media="all" />
	<style type="text/css">
       .layui-input .layui-unselect{
            max-width: 100px;
        }
		@media screen and (max-width: 376px) {
			.layui-form-item .layui-form-label {
				width:10%;
			}
            .layui-input{
                width: 65%;
            }
            .layui-input .layui-unselect{
                max-width: 50%;
            }
		}
		@media screen and (min-width: 376px) {
			.logo1 {
				display:none;
			}
		}
		@media screen and (max-width: 450px){
			.layui-form-select .layui-edge{
				top:75%;
			}
		}
	</style>
</head>
<body class="childrenBody">
	    <form class="layui-form layui-row layui-col-space10">
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">学期</label>
					<div class="layui-input-inline">
				      <input type="text" name="term" lay-verify="required" autocomplete="off" class="layui-input" id="term" disabled>
				    </div>
				    <label class="layui-form-label" >姓名</label>
				    <div class="layui-input-inline" >
				      <input type="text" name="userName"  autocomplete="off" class="layui-input" id="userName" value="<%=username%>" disabled>
				    </div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">地点</label>
					<div class="layui-input-inline">
                        <input type="text" name="address"  autocomplete="off" class="layui-input" id="address" lay-verify="required">
				    </div>
                    <label class="layui-form-label">电话</label>
					<div class="layui-input-inline">
                        <input type="text" name="phone"  autocomplete="off" class="layui-input" id="phone" lay-verify="required">
				    </div>
				</div>
			</div>
            <div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">手机</label>
					<div class="layui-input-inline">
                        <input type="text" name="cellphone"  autocomplete="off" class="layui-input" id="cellphone" lay-verify="required">
				    </div>
                    <label class="layui-form-label">邮箱</label>
					<div class="layui-input-inline">
                        <input type="text" name="email"  autocomplete="off" class="layui-input" id="email" lay-verify="required">
				    </div>
				</div>
			</div>
            <div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">时间</label>
					<div class="layui-input-inline select" >
						<select name="week" lay-filter="week" id="week" lay-verify="required">
                            <option value=""></option>
                            <option value="星期一">星期一</option>
                            <option value="星期二">星期二</option>
                            <option value="星期三">星期三</option>
                            <option value="星期四">星期四</option>
                            <option value="星期五">星期五</option>
                            <option value="星期六">星期六</option>
                            <option value="星期天">星期天</option>
                        </select>
				    </div>
                </div>
            </div>
            <div class="layui-form-item">
                    <label class="layui-form-label">开始</label>
                    <div class="layui-input-inline" >
						<select name="timeStart" lay-filter="timeStart" id="timeStart" lay-verify="required">
                            <option value="07">07</option>
                            <option value="08">08</option>
                            <option value="09">09</option>
                            <option value="10">10</option>
                            <option value="11">11</option>
                            <option value="12">12</option>
                            <option value="13">13</option>
                            <option value="14">14</option>
                            <option value="15">15</option>
                            <option value="16">16</option>
                            <option value="17">17</option>
                            <option value="18">18</option>
                            <option value="19">19</option>
                        </select>
				    </div>
				    <label class="layui-form-label"></label>
                    <div class="layui-input-inline" >
						<select name="timeEnd" lay-filter="timeEnd" id="timeEnd" lay-verify="required">
                            <option value="00">00</option>
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                            <option value="50">50</option>
                        </select>
				    </div>
            </div>
            <div class="layui-form-item">
                    <label class="layui-form-label">结束</label>
                    <div class="layui-input-inline" >
						<select name="timeStart1" lay-filter="timeStart1" id="timeStart1" disabled>
                            <option value="09">09</option>
                            <option value="10">10</option>
                            <option value="11">11</option>
                            <option value="12">12</option>
                            <option value="13">13</option>
                            <option value="14">14</option>
                            <option value="15">15</option>
                            <option value="16">16</option>
                            <option value="17">17</option>
                            <option value="18">18</option>
                            <option value="19">19</option>
                        </select>
				    </div>
				    <label class="layui-form-label"></label>
                    <div class="layui-input-inline" >
						<select name="timeEnd1" lay-filter="timeEnd1" id="timeEnd1" disabled>
                            <option value="00">00</option>
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                            <option value="50">50</option>
                        </select>
				    </div>
			</div>
			<div class="layui-form-item">
				<div class="layui-col-xs-offset1">
					<a class="layui-btn layui-btn-sm" lay-filter="update" lay-submit><i class="layui-icon">&#xe609;</i>保存</a>
				</div>
			</div>
        </form>

	

<script type="text/javascript" src="../manage/js/thirdpart.js"></script>
<script type="text/javascript" src="../javascripts/moment.js"></script>
<script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
<!-- <script type="text/javascript" src="newsAdd.js"></script> -->
<script type="text/javascript">
		
$(function(){
	layui.use(['jquery','layer','form','layedit','upload','laydate'], function(){ 
    //let $ = layui.$, //重点处
    let	layedit = layui.layedit,
        laydate = layui.laydate

    let form = layui.form,layer = layui.layer
    let nowyear = moment().year(),nowmonth = moment().month(),nowterm
    console.log('----------------',nowyear,nowmonth)
    if(nowmonth >= 7){
        nowterm = nowyear + ' - ' + (nowyear+1) + '第一学期'
    }else{
        nowterm = (nowyear-1) + ' - '  + nowyear + '第二学期'
    }
    $('#term').val(nowterm)
    form.on('select(timeEnd)',function (data) {
        console.log('',data)
		if(data.value == '00'){
			$("#timeEnd1").find("option[value='00']").attr("selected",true);
		}
        if(data.value == '10'){
			$("#timeEnd1").find("option[value='10']").attr("selected",true);
		}
        if(data.value == '20'){
			$("#timeEnd1").find("option[value='20']").attr("selected",true);
		}
        if(data.value == '30'){
			$("#timeEnd1").find("option[value='30']").attr("selected",true);
		}
        if(data.value == '40'){
			$("#timeEnd1").find("option[value='40']").attr("selected",true);
		}
        if(data.value == '50'){
			$("#timeEnd1").find("option[value='50']").attr("selected",true);
		}
        form.render()
    })
	form.on('select(timeStart)',function (data) {
		console.log('',data)
		if(data.value == '07'){
			$("#timeStart1").find("option[value='09']").attr("selected",true);
		}
		if(data.value == '08'){
			$("#timeStart1").find("option[value='10']").attr("selected",true);
		}
        if(data.value == '09'){
			$("#timeStart1").find("option[value='11']").attr("selected",true);
		}
        if(data.value == '10'){
			$("#timeStart1").find("option[value='12']").attr("selected",true);
		}
        if(data.value == '11'){
			$("#timeStart1").find("option[value='13']").attr("selected",true);
		}
        if(data.value == '12'){
			$("#timeStart1").find("option[value='14']").attr("selected",true);
		}
        if(data.value == '13'){
			$("#timeStart1").find("option[value='15']").attr("selected",true);
		}
        if(data.value == '14'){
			$("#timeStart1").find("option[value='16']").attr("selected",true);
		}
        if(data.value == '15'){
			$("#timeStart1").find("option[value='17']").attr("selected",true);
		}
        if(data.value == '16'){
			$("#timeStart1").find("option[value='18']").attr("selected",true);
		}
        if(data.value == '17'){
			$("#timeStart1").find("option[value='19']").attr("selected",true);
		}if(data.value == '18'){
			$("#timeStart1").find("option[value='20']").attr("selected",true);
		}if(data.value == '19'){
			$("#timeStart1").find("option[value='21']").attr("selected",true);
		}
		form.render()
	})
    let id = '<%-data.id%>'
    if(id==''||id==null||typeof(id)=='undefined'){
		console.log('新增',id)
	}else{
        $('#address').val('<%- data.address%>')
        $('#phone').val('<%- data.phone%>')
        $('#cellphone').val('<%- data.cellphone%>')
	    $('#email').val('<%- data.email%>')
        $('#week').val('<%-data.week%>')
		$('#timeStart').val('<%-data.timeStart%>')
        $('#timeEnd').val('<%-data.timeEnd%>')
        $('#timeStart1').val('<%-data.timeStart1%>')
        $('#timeEnd1').val('<%-data.timeEnd1%>')
  		form.render()
	}
    form.on('submit(update)', function(data){
	  let timeStart = $('#week').val()  + ' ' + $('#timeStart').val() + ':' + $('#timeEnd').val(),
          timeEnd =  $('#timeStart1').val() + ':' + $('#timeEnd1').val()
	  //更新
	  data.field.id = id
	  data.field.term = $('#term').val()
      data.field.userName = $('#userName').val()
	  data.field.address = $('#address').val()
      data.field.phone = $('#phone').val()
      data.field.cellphone = $('#cellphone').val()
      data.field.email = $('#email').val()
      data.field.week = $('#week option:selected').val()
      data.field.timeStart =  $('#timeStart').val()
      data.field.timeEnd = $('#timeEnd').val()
      data.field.timeStart1 =  $('#timeStart1').val()
      data.field.timeEnd1 = $('#timeEnd1').val()
	
	  console.log('提交数据',data.field)

	  $.ajax({
          //本地与服务器
        url:'<%=base_url%>ohadd',
	  	type:'POST',
	  	data:data.field,
	  	dataType : "json",
	  	success:function(result){
	  		if(result.code == 0){
	  			console.log('update success')
	  			//墨绿深蓝风
				let frameindex = layer.alert('保存成功', {
				  skin: 'layui-layer-molv' //样式类名
				  ,closeBtn: 0
				}, function(){
					parent.CloseCurrentTab()
					layer.close(frameindex);
				});	  			
	  		}
	  	},
	  	error:function(msg){
	  		console.log('ajax error msg',msg)
	  	}
	  })
	});
})
})

</script>
</body>
</html>